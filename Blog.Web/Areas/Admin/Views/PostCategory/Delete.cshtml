@model Blog.Model.Models.PostCategory

@{
    ViewBag.Title = "Trang xóa danh mục tin tức " + Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Xóa danh mục tin tức
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin danh mục tin tức
            </div>
            <div class="panel-body">
                <div class="row">
                    @if (ViewData["Error"] != null)
                    {
                        <h3 style="color:red">Xóa thất bại!</h3>
                    }
                    else
                    {
                        <h3>Bạn có chắc chắn muốn xóa bản ghi này?</h3>
                    }
                    <dl class="dl-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                        <dt>
                            ID
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ID)
                        </dd>
                        <dt>
                            Tên danh mục
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>                       
                        <dt>
                            Trạng thái
                        </dt>

                        <dd>
                            @Html.Raw(Model.Status ? "Kích hoạt" : "Khoá")
                        </dd>
                    </dl>

                    @using (Html.BeginForm("Delete", "PostCategory", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Xóa" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
