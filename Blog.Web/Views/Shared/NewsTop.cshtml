                    <div class="info">
                        <span class="cate">News</span>
                        <h3>
                            <a href="@(Model.BlockRightBottomRight.Url)">@Model.BlockRightBottomRight.Description</a>
                        </h3>                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-content clearfix" style="clear: both;padding-top: 40px;">
    <h3 class="widget-title red">
        <a href="javascript:;">
            <span style="padding:0px">
                <img src="@ViewBag.Image">
            </span>
        </a>
        <p class="linktabs">
        </p>
    </h3>
    <div class="featured_posts clearfix bxgpl">
        @foreach (var item in Model.EventNews)
        {
            <div class="itemGpl">
                <div class="single-article">
                    <figure>
                        <a class="bx-img" href="/@item.Alias-@(item.ID).html" title="@item.Name" rel="bookmark">
                            <img width="852" height="481" src="@item.Image" class="attachment-large size-large wp-post-image" alt="@item.Name" 0="45" 1="45" 2="1" srcset="@item.Image 300w, @item.Image 600w, @item.Image 852w" sizes="(max-width: 852px) 100vw, 852px" />
                        </a>
                    </figure>
                    <div class="article-content">
                        <h3 class="entry-title"> <a href="/@item.Alias-@(item.ID).html">@item.Name</a> </h3>
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
